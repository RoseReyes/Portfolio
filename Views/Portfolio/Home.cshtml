<!DOCTYPE html>
<html>
    <head>
        <meta charset='utf-8'>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">    
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link href="assets/css/bootstrap-responsive.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Molle:400i|Poppins:400,400i" rel="stylesheet">
        <link rel ="stylesheet" href="~/css/portfolio.css"/>
        <title>Home Page</title>
    </head>
    <body>
        @{
            DateTime CurrentTime = DateTime.Now;
        <div class="container">
            <div class="row">
                <div class="d-inline text-secondary w-50">
                    <nav class="navbar navbar-expand-lg text-secondary">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Links
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="/Home">Home</a>
                                        <a class="dropdown-item" href="/Home/Projects">Project</a>
                                    <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="/Home/Projects/Contact">Contact</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>  
                <div class="d-inline p-3 text-secondary ml-auto w-10">
                   @CurrentTime.ToString("h : mm tt")
                </div>
            </div>
            <div class="row justify-content-center h-25"></div>
            <div class="row justify-content-center h-50">
                <div class="text-center main-info">
                    <img src="../images/profile.png" alt="img-thumbnail" class="rounded-circle profile">
                    <p> Rose Reyes </p>
                    <div class="dropdown-divider text-secondary"></div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-sm">
                        <p class="adv">Full Stack Developer<p>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    }
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>
